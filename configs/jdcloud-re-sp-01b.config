# ==========================================
# 京东云一代 RE-SP-01B 目标配置
# SoC: MT7621AT | RAM: 512MB | Flash: 32MB
# ==========================================

# Target Platform
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_jdcloud_re-sp-01b=y

# Firmware Image Settings
# 注意: Flash 实际可用约 27MB，控制固件大小
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y
# CONFIG_TARGET_ROOTFS_EXT4FS is not set

# WiFi 禁用 (不使用无线功能)
# CONFIG_PACKAGE_kmod-mt7603 is not set
# CONFIG_PACKAGE_kmod-mt7615e is not set
# CONFIG_PACKAGE_kmod-mt7615-firmware is not set

# eMMC/SD Card Support (内置 64GB eMMC)
CONFIG_PACKAGE_kmod-sdhci-mt7620=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_e2fsprogs=y
CONFIG_PACKAGE_block-mount=y

# USB Support (USB 2.0)
CONFIG_PACKAGE_kmod-usb2=y
# CONFIG_PACKAGE_kmod-usb3 is not set
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-extras=y

# IPv6 Support
CONFIG_PACKAGE_ipv6helper=y
